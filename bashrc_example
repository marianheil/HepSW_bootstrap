if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi

# GCC 5
export gpath=/usr/local
export CC=${gpath}/bin/gcc

# load MPI
module load mpi/openmpi-x86_64

# other libraries e.g. GLIBCXX_3.4.20
export LD_LIBRARY_PATH=${LD_LIBRARY_PATH}:/usr/local/lib64:/usr/lib64

# FastJet (No Dependencies)
source /mt/hepsw/el7/x86_64/FastJet-3.3.2/FastJetenv.sh

# Rivet 
source /mt/hepsw/el7/x86_64/rivet-2.7.0/rivetenv.sh
# Load dependencies explicitly (recommended)
source /mt/hepsw/el7/x86_64/HepMC2-2.06.09/HepMC2env.sh
# FastJet already loaded before
# source /mt/hepsw/el7/x86_64/FastJet-3.3.2/FastJetenv.sh

# Sherpa
source /mt/hepsw/el7/x86_64/Sherpa-2.2.8/Sherpaenv.sh
# Load dependencies implicitly (this will load FastJet a second time)
source /mt/hepsw/el7/x86_64/Sherpa-2.2.8/Sherpadependencies.sh
# Note: Dependencies of dependencies are not loaded automatically
# e.g. rivetdependencies.sh is not loaded from Sherpadependencies.sh
